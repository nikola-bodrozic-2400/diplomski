{% set strana = app.request.get('_route') %}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link href="/css/bootstrap.min.css" rel="stylesheet">
            <link href="/css/bootstrap-theme.min.css" rel="stylesheet">

            <link rel="stylesheet" href="{{ asset('css/style.css') }}"/>
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>

        <div class="container">
                        <!-- Static navbar -->
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="/">Home</a>
                    </div>
                    <div id="navbar" class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">

                            <li{% if strana =="news_index" %} class='active'{% endif %}>
                                <a href="{{ path('news_index') }}">Home</a>
                            </li>

                            <li{% if strana =="login_form" %} class='active'{% endif %}>
                                                            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                                                 <a href="{{ path('logout') }}">Hello <strong>{{ app.user.username }}</strong> Logout</a>
                                                            {% else %}
                                                                 <a href="{{ path('login_form') }}">Login</a>
                                                            {% endif %}
                            </li>
                            {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
                            <li{% if strana =="user_signup" %} class='active'{% endif %}>
                                    <a href="{{ path('user_signup') }}">Sing Up</a>
                            </li>
                            {% endif %}
                            {% if is_granted('ROLE_ADMIN') %}
                            <li{% if strana =="user_register" %} class='active'{% endif %}>
                                <a href="{{ path('user_register') }}">Register Employee</a>
                            </li>
                            {% endif %}
                        </ul>
                    </div><!--/.nav-collapse -->
                </div><!--/.container-fluid -->
            </nav>

            <div class="row">
                <div class="col-md-12">
                    <div>
                        {% if app.session.flashBag.has('success') %}
                            <div class="alert alert-success">
                                {% for msg in app.session.flashBag.get('success') %}
                                    {{ msg }}
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                    {% block body %}{% endblock %}
                    {% block javascripts %}
                        <script src="/js/jquery.js"></script>
                        <script src="/js/bootstrap.min.js"></script>
                    {% endblock %}
                </div>
            </div>
        </div>
    </body>
</html>
